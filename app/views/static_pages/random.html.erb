<% if @idea.present? %>
<%- link_to"Inspire me",random_path, class:'btn btn-sm btn-block'%>
<div class="panel panel-default">
  <div class="panel-body">
    <blockquote>
      <p> <%= @idea.Username %></p>
     <small><%= @idea.Password %></small>
    </blockquote>
      
    <br>

    <div class="btn-group" role="group">
      <%= link_to 'Delete', idea_path(@idea), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: "Are you sure?"} %>
      <%= link_to 'Revise', edit_idea_path(@idea), class: 'btn btn-sm btn-success' %>
    </div>
  </div>
</div>
<h4>No idea <%=link_to'here',root_path,class:'btn btn-sm btn-primary'%></h4>
<%end %>

